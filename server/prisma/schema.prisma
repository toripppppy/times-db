datasource db {
  provider = "sqlite"
  url      = "file:../data/db.sqlite3"
}

generator client {
  provider = "prisma-client-js"
}

model Audio {
  id    Int    @id @default(autoincrement())
  // ファイル情報
  filename  String
  filetype fileType

  // S3に保存しているUUID
  uuid  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("audios")
}

enum fileType {
  WAV
  MP3
}