datasource db {
  provider = "sqlite"
  url      = "file:../data/db.sqlite3"
}

generator client {
  provider = "prisma-client-js"
}

model MediaFile {
  id Int @id @default(autoincrement())

  // ファイル情報
  filename String
  mimeType String

  // S3からの参照に使うキー
  s3Key String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // リレーション
  MediaItem MediaItem[]

  @@map("media_files")
}

model MediaItem {
  id      Int    @id @default(autoincrement())
  comment String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  mediaFileId Int
  mediaFile   MediaFile @relation(fields: [mediaFileId], references: [id])

  @@map("media_items")
}
